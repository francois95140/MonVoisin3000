<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>

<Pane prefHeight="700.0" prefWidth="1000.0" style="-fx-background-color: linear-gradient(to bottom, #667eea 0%, #764ba2 100%);" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <!-- Background decorative elements -->
        <Rectangle arcHeight="50.0" arcWidth="50.0" fill="#ffffff20" height="120.0" layoutX="850.0" layoutY="550.0" rotate="15.0" width="120.0" />
        <Rectangle arcHeight="30.0" arcWidth="30.0" fill="#ffffff15" height="80.0" layoutX="50.0" layoutY="580.0" rotate="-20.0" width="80.0" />
        <Rectangle arcHeight="40.0" arcWidth="40.0" fill="#ffffff10" height="100.0" layoutX="900.0" layoutY="100.0" rotate="25.0" width="100.0" />
        <Rectangle arcHeight="60.0" arcWidth="60.0" fill="#ffffff10" height="140.0" layoutX="100.0" layoutY="150.0" rotate="-10.0" width="140.0" />

        <!-- Header with glassmorphism effect -->
        <Pane layoutY="0.0" prefHeight="80.0" prefWidth="1000.0" style="-fx-background-color: #ffffffaa; -fx-border-color: #ffffff33; -fx-border-width: 0 0 1 0;">
            <children>
                <!-- Logo container with hover effect -->
                <Pane layoutX="20.0" layoutY="15.0" onMouseClicked="#retourAccueil" style="-fx-cursor: hand; -fx-background-color: #ffffff1a; -fx-background-radius: 25; -fx-padding: 10;">
                    <children>
                        <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../assets/icone.png" />
                            </image>
                        </ImageView>
                    </children>
                    <effect>
                        <DropShadow color="#00000030" radius="10.0" />
                    </effect>
                </Pane>

                <!-- Title with modern typography -->
                <Label layoutX="90.0" layoutY="20.0" text="Actualités Ma Ville" style="-fx-font-family: sans-serif; -fx-text-fill: #333333; -fx-font-weight: bold; -fx-font-size: 32px;">
                    <effect>
                        <DropShadow color="#00000020" radius="3.0" />
                    </effect>
                </Label>

                <!-- Subtitle -->
                <Label layoutX="90.0" layoutY="50.0" opacity="0.8" text="Recherche par ville" style="-fx-font-family: sans-serif; -fx-text-fill: #555555; -fx-font-size: 14px;">
                </Label>

                <!-- Back button -->
                <Pane layoutX="840.0" layoutY="10.0" onMouseClicked="#retourDashboard" prefHeight="60.0" prefWidth="60.0" style="-fx-cursor: hand; -fx-background-color: #6699cc4d; -fx-background-radius: 25; -fx-padding: 10;">
                    <children>
                        <ImageView fitHeight="40.0" fitWidth="40.0" layoutX="10.0" layoutY="10.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../assets/back.png" />
                            </image>
                        </ImageView>
                    </children>
                    <effect>
                        <DropShadow color="#00000030" radius="10.0" />
                    </effect>
                </Pane>

                <!-- Logout button -->
                <Pane layoutX="920.0" layoutY="10.0" onMouseClicked="#deconnexion" prefHeight="60.0" prefWidth="60.0" style="-fx-cursor: hand; -fx-background-color: #6699cc4d; -fx-background-radius: 25; -fx-padding: 10;">
                    <children>
                        <ImageView fitHeight="40.0" fitWidth="40.0" layoutX="10.0" layoutY="10.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../assets/logout.png" />
                            </image>
                        </ImageView>
                    </children>
                    <effect>
                        <DropShadow color="#00000030" radius="10.0" />
                    </effect>
                </Pane>
            </children>
        </Pane>

        <!-- Main content area -->
        <HBox alignment="CENTER" fillHeight="false" layoutY="80.0" prefHeight="620.0" prefWidth="1000.0" spacing="50.0">
            <children>
                <!-- Search form container -->
                <Pane prefHeight="500.0" prefWidth="450.0" style="-fx-background-color: #ffffff95; -fx-background-radius: 20;">
                    <children>
                        <VBox alignment="CENTER" fillWidth="false" prefHeight="500.0" prefWidth="450.0" spacing="25.0">
                            <children>
                                <!-- Search icon -->
                                <ImageView fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../assets/scrap.png" />
                                    </image>
                                    <effect>
                                        <DropShadow color="#667eea60" radius="15.0" />
                                    </effect>
                                </ImageView>

                                <!-- Title -->
                                <Label alignment="CENTER" text="Recherche d'Actualités" style="-fx-font-family: sans-serif; -fx-text-fill: #333333; -fx-font-weight: bold; -fx-font-size: 28px;">
                                </Label>

                                <!-- City input field -->
                                <VBox alignment="CENTER" spacing="10.0">
                                    <children>
                                        <Label text="Nom de la ville" style="-fx-font-family: sans-serif; -fx-text-fill: #333333; -fx-font-weight: bold; -fx-font-size: 16px;">
                                        </Label>
                                        <Pane prefHeight="60.0" prefWidth="350.0" style="-fx-background-color: #f8f9fa; -fx-background-radius: 15; -fx-border-color: #e9ecef; -fx-border-radius: 15; -fx-border-width: 2;">
                                            <children>
                                                <TextField fx:id="champVille" layoutX="15.0" layoutY="15.0" prefHeight="30.0" prefWidth="320.0" promptText="Ex: Paris, Lyon, Marseille..." style="-fx-font-family: sans-serif; -fx-background-color: transparent; -fx-border-color: transparent; -fx-padding: 5px; -fx-font-size: 16px;">
                                                </TextField>
                                            </children>
                                            <effect>
                                                <DropShadow color="#00000010" radius="8.0" />
                                            </effect>
                                        </Pane>
                                    </children>
                                </VBox>

                                <!-- Search button -->
                                <Button onMouseClicked="#rechercherActualites" prefHeight="55.0" prefWidth="300.0" text="🔍 Rechercher les Actualités"
                                        style="-fx-font-family: sans-serif;
                                               -fx-background-color: linear-gradient(to right, #667eea, #764ba2);
                                               -fx-background-radius: 30;
                                               -fx-border-radius: 30;
                                               -fx-cursor: hand;
                                               -fx-font-weight: bold;
                                               -fx-text-fill: white;
                                               -fx-font-size: 16px;">
                                    <effect>
                                        <DropShadow color="#667eea60" radius="20.0" />
                                    </effect>
                                </Button>

                                <!-- Quick access buttons -->
                                <VBox alignment="CENTER" spacing="10.0">
                                    <children>
                                        <Label text="Accès rapide" style="-fx-font-family: sans-serif; -fx-text-fill: #999999; -fx-font-size: 14px;">
                                        </Label>
                                        <HBox alignment="CENTER" spacing="15.0">
                                            <children>
                                                <Button onMouseClicked="#villeRapide1" prefHeight="35.0" prefWidth="100.0" text="Paris"
                                                        style="-fx-font-family: sans-serif;
                                                               -fx-background-color: transparent;
                                                               -fx-border-color: #667eea;
                                                               -fx-border-width: 1;
                                                               -fx-border-radius: 18;
                                                               -fx-background-radius: 18;
                                                               -fx-cursor: hand;
                                                               -fx-text-fill: #667eea;
                                                               -fx-font-size: 12px;">
                                                </Button>
                                                <Button onMouseClicked="#villeRapide2" prefHeight="35.0" prefWidth="100.0" text="Lyon"
                                                        style="-fx-font-family: sans-serif;
                                                               -fx-background-color: transparent;
                                                               -fx-border-color: #667eea;
                                                               -fx-border-width: 1;
                                                               -fx-border-radius: 18;
                                                               -fx-background-radius: 18;
                                                               -fx-cursor: hand;
                                                               -fx-text-fill: #667eea;
                                                               -fx-font-size: 12px;">
                                                </Button>
                                                <Button onMouseClicked="#villeRapide3" prefHeight="35.0" prefWidth="100.0" text="Marseille"
                                                        style="-fx-font-family: sans-serif;
                                                               -fx-background-color: transparent;
                                                               -fx-border-color: #667eea;
                                                               -fx-border-width: 1;
                                                               -fx-border-radius: 18;
                                                               -fx-background-radius: 18;
                                                               -fx-cursor: hand;
                                                               -fx-text-fill: #667eea;
                                                               -fx-font-size: 12px;">
                                                </Button>
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>
                            </children>
                        </VBox>
                    </children>
                    <effect>
                        <DropShadow color="#00000025" radius="25.0" />
                    </effect>
                </Pane>

                <!-- Information panel -->
                <Pane prefHeight="500.0" prefWidth="400.0" style="-fx-background-color: #0000004d; -fx-background-radius: 20;">
                    <children>
                        <VBox alignment="CENTER" fillWidth="false" prefHeight="500.0" prefWidth="400.0" spacing="30.0">
                            <children>
                                <!-- Info icon -->
                                <Pane prefHeight="80.0" prefWidth="80.0" style="-fx-background-color: #ffffff33; -fx-background-radius: 40;">
                                    <children>
                                        <Label alignment="CENTER" prefHeight="80.0" prefWidth="80.0" text="ℹ️" style="-fx-font-family: sans-serif; -fx-text-fill: white; -fx-font-size: 36px;">
                                        </Label>
                                    </children>
                                </Pane>

                                <!-- Title -->
                                <Label alignment="CENTER" text="Recherche Intelligente" style="-fx-font-family: sans-serif; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 24px;">
                                </Label>

                                <!-- Features list -->
                                <VBox alignment="CENTER_LEFT" spacing="15.0">
                                    <children>
                                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                                            <children>
                                                <Label text="🎯" style="-fx-font-family: sans-serif; -fx-text-fill: white; -fx-font-size: 20px;">
                                                </Label>
                                                <Label prefWidth="280.0" text="Actualités locales en temps réel" wrapText="true" style="-fx-font-family: sans-serif; -fx-text-fill: #CCCCCC; -fx-font-size: 14px;">
                                                </Label>
                                            </children>
                                        </HBox>

                                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                                            <children>
                                                <Label text="📰" style="-fx-font-family: sans-serif; -fx-text-fill: white; -fx-font-size: 20px;">
                                                </Label>
                                                <Label prefWidth="280.0" text="Sources multiples et fiables" wrapText="true" style="-fx-font-family: sans-serif; -fx-text-fill: #CCCCCC; -fx-font-size: 14px;">
                                                </Label>
                                            </children>
                                        </HBox>

                                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                                            <children>
                                                <Label text="🔔" style="-fx-font-family: sans-serif; -fx-text-fill: white; -fx-font-size: 20px;">
                                                </Label>
                                                <Label prefWidth="280.0" text="Alertes pour événements importants" wrapText="true" style="-fx-font-family: sans-serif; -fx-text-fill: #CCCCCC; -fx-font-size: 14px;">
                                                </Label>
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>

                                <!-- Tips -->
                                <VBox alignment="CENTER" spacing="8.0">
                                    <children>
                                        <Label text="💡 Conseil" style="-fx-font-family: sans-serif; -fx-text-fill: #FFD700; -fx-font-weight: bold; -fx-font-size: 14px;">
                                        </Label>
                                        <Label alignment="CENTER" prefWidth="320.0" text="Vous pouvez rechercher par nom de ville, code postal ou région pour des résultats plus précis" textAlignment="CENTER" wrapText="true" style="-fx-font-family: sans-serif; -fx-text-fill: #CCCCCC; -fx-font-size: 12px;">
                                        </Label>
                                    </children>
                                </VBox>
                            </children>
                        </VBox>
                    </children>
                    <effect>
                        <DropShadow color="#00000025" radius="20.0" />
                    </effect>
                </Pane>
            </children>
        </HBox>
    </children>
</Pane>