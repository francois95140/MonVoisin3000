                                    <children>
                                        <HBox alignment="CENTER_LEFT" fillHeight="false" prefHeight="180.0" prefWidth="910.0" spacing="20.0" style="-fx-padding: 20px;">
                                            <children>
                                                <VBox alignment="TOP_LEFT" prefWidth="650.0" spacing="10.0">
                                                    <children>
                                                        <Label text="Nouveau parc écologique ouvert au public" wrapText="true" style="-fx-font-family: sans-serif; -fx-text-fill: #333333; -fx-font-weight: bold; -fx-font-size: 18px;">
